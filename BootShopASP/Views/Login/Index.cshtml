@model mLogin
@{
    ViewData["Title"] = "Login";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Admin - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Admin.css">
    <link rel="stylesheet" href="~/BootShopASP.styles.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300;400;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
        }
          
        </style>

</head>
<body class="text-center">
<main class="form-signin w-25 mx-auto">
    <form asp-action="Index" class="border border-1 my-4 rounded-3">
        <h1 class="h3 my-3">Please sign in</h1>
        <div class="">
            <label>
                <input asp-for="Login" class="form-control" placeholder="Login">
            </label>
        </div>
        <br>
        <div class="">
            <label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            </label>
        </div>

        <button class="my-4 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</main>
</body>
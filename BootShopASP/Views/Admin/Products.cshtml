@{
    ViewBag.Title = "Products";
    Layout = "_AdminLayout";
}

<h2>Products</h2>


@foreach (mProduct product in ViewBag.Products) {
    <div class="card d-flex flex-row mb-4">
        <img class="p-2 detail-picture" src="~/@product.Images[0].path" alt="picture">
        <div class="p-2 product-detail flex-grow-1">
            <h2>@product.name</h2>

        </div>
    </div>
}
@if (@ViewBag.pagingBack != -1) {
    <a asp-controller="Admin" asp-action="Products" asp-route-pagingIndex="@ViewBag.pagingBack">BACK</a>
}
@if (@ViewBag.pagingNext != -1) {
    <a asp-controller="Admin" asp-action="Products" asp-route-pagingIndex="@ViewBag.pagingNext">NEXT</a>
}